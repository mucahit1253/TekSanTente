@model IEnumerable<Category>

<main class="main">

    <div class="page-title" data-aos="fade">
        <div class="heading">
            <nav class="breadcrumbs">
                <div class="container">
                    <ol>
                        <li><a asp-controller="Home" asp-action="index">Ana Menü</a></li>
                        <li class="current">Ürün Kategori</li>
                    </ol>
                </div>
            </nav>
        </div>
    </div>
    <section id="services" class="services section">

        <!-- Section Title Burası Kategori olacak-->
        <div class="container section-title" data-aos="fade-up">
            <h2>Ürünlerimiz</h2>

            <!-- Bura gibi olacak düzenlem yeri -->
        </div><!-- End Section Title Burası Kategori olacak -->

        <div class="container">

            <div class="row gy-4">
                @{
                    int delay = 100;
                }
                @foreach (Category item in Model)
                {

                    <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="@delay">
                        <div class="service-item  position-relative">
                            <!-- <div class="icon">
                              <i class="bi bi-activity"></i>
                            </div> -->
                            <div class="member">
                                <img src="@item.ImageUrl" class="img-fluid" alt="" width="300" height="150">
                            </div>
                            <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@item.CategoryId" class="stretched-link">
                                <h3>@item.CategoryName</h3>
                            </a>
                            <p>
                                @item.Description
                            </p>
                        </div>
                    </div>
                    delay += 100; // her item için 100 ms artır

                    <!-- End Service Item -->
                }
            </div>

        </div>

    </section><!-- /Services Section -->
</main>