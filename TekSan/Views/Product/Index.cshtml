@model List<Product>

 
<main class="main">

    <!-- Page Title -->
    <div class="page-title" data-aos="fade">
      <div class="heading">
        <div class="container">
          <div class="row d-flex justify-content-center text-center">
            <div class="col-lg-8">
              <h1>Ürünler</h1>
            </div>
          </div>
        </div>
      </div>
      <nav class="breadcrumbs">
        <div class="container">
          <ol>
            <li><a asp-controller="Home" asp-action="index">Home</a></li>
            <li class="current">Ürünler</li>
          </ol>
        </div>
      </nav>
    </div><!-- End Page Title -->
     <section id="real-estate" class="real-estate section">
          <div class="container">
               <div class="row gy-4">
                @foreach (Product prd in Model)
                {
                    <div class="col-xl-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                        <div class="card">
                            <img src="assets/img/properties/property-1.jpg" alt="" class="img-fluid">
                            <div class="card-body">
                                <span class="sale-rent"> Satın Al</span>
                                <h3><a href="property-single.html" class="stretched-link">@prd.Name</a></h3>
                                <div class="card-content d-flex flex-column justify-content-center text-center">
                                    <div class="row propery-info">
                                        <div class="col">Alan</div>
                                        <div class="col">Ürün Adı</div>
                                        <div class="col">Fiyat</div>
                                    </div>
                                    <div class="row">
                                        <div class="col">1m2</div>
                                        <div class="col">@prd.Name</div>
                                        <div class="col">@prd.Price</div>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- End Property Item -->
                    
                }

        
                    
      
                </div>
       </div>
    </section><!-- /Real Estate Section -->

    </main>