@model IEnumerable<Product>
<p></p>
<div class="row gy-4">
    @foreach (var prd in Model)
    {
        var cover = prd.Images?
        .OrderBy(i => i.DisplayOrder)
        .Select(i => i.Media?.Url)
        .FirstOrDefault();

        var src = Url.Content(cover ?? "~/assets/img/placeholder.png");

        <div class="col-xl-3 col-md-1" data-aos="fade-up" data-aos-delay="100">
            <div class="card">
                <img src="@src"
                     alt="@prd.Name"
                     class="img-fluid"
                     loading="lazy"
                     style="width:100%; height:250px; object-fit:cover; border-radius:8px;" />

                <div class="card-body">
                    <h3>
                        <a asp-controller="Product" asp-action="Get" asp-route-slug="@prd.Slug" class="stretched-link">
                            @prd.Name
                        </a>
                    </h3>
                </div>
            </div>
        </div>
    }
</div>